        <Label Content="Taxi number" HorizontalAlignment="Left" Margin="58,204,0,0" VerticalAlignment="Top"/>
        <Label Content="Total paid to taxi" HorizontalAlignment="Left" Margin="34,246,0,0" VerticalAlignment="Top"/>
        <Label x:Name="tn_label1" Content="" HorizontalAlignment="Left" Margin="209,0,0,0" VerticalAlignment="Center"/>
        <Label x:Name="tp_label" Content="" HorizontalAlignment="Left" Margin="209,246,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.185,0.555"/>
